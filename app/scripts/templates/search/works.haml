.grid-sizer
{{#each works}}
.item
  %a.show(href="#" data-identifier="{{identifier}}")
    %figure
      .img-container
        %img(src="{{ imageURL }}")
      %figcaption
        {{#if title}}
        %h2 {{title}}
        {{/if}}

        {{#if fullname}}
        %h3 {{fullname}}
        {{/if}}
{{/each}}
